FROM python:3.13.2-slim

# Install necessary packages
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    sudo \
    procps \
    postgresql-client \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user with sudo access
ARG USERNAME=vscode
ARG USER_UID=1000
ARG USER_GID=$USER_UID

RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

# Set up development tools
RUN pip install --no-cache-dir black pylint pytest pytest-cov isort

WORKDIR /workspace/backend

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Create uploads directory
RUN mkdir -p /workspace/backend/uploads

# Create vscode server directories with proper permissions
RUN mkdir -p /home/$USERNAME/.vscode-server/bin \
    /home/$USERNAME/.vscode-server/data \
    /home/$USERNAME/.vscode-server/extensions

# Give vscode user ownership of critical directories
RUN chown -R $USERNAME:$USERNAME /workspace \
    /home/$USERNAME/.vscode-server

# Set the default user
USER $USERNAME

EXPOSE 5000

CMD ["flask", "run", "--host=0.0.0.0", "--port=5000"]
